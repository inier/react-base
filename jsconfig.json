{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"],
            "@style/*": ["style/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "build"]
}
