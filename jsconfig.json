{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"],
            "@api": ["api/index.js"],
            "@api/*": ["api/*"],
            "@mock": ["mock/index.js"],
            "@mock/*": ["mock/*"],
            "@assets": ["assets/index.js"],
            "@assets/*": ["assets/*"],
            "@components": ["components/index.js"],
            "@components/*": ["components/*"],
            "@layouts": ["layouts/index.js"],
            "@layouts/*": ["layouts/*"],
            "@modules": ["modules/index.js"],
            "@modules/*": ["modules/*"],
            "@pages": ["pages/index.js"],
            "@pages/*": ["pages/*"],
            "@routes": ["routes/index.js"],
            "@routes/*": ["routes/*"],
            "@stores": ["stores/index.js"],
            "@stores/*": ["stores/*"],
            "@utils": ["utils/index.js"],
            "@utils/*": ["utils/*"],
            "@routerConfig": ["routerConfig.js"],
            "@menuConfig": ["menuConfig.js"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "build"]
}
